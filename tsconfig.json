{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "allowJs": false,
        "watch": false,
        "listEmittedFiles": false,
        "listFiles": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        ".git"
    ]
}