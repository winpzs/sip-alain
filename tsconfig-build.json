{
    "compilerOptions": {
        "declaration": true,
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "allowJs": false,
        "watch": false,
        "listEmittedFiles": false,
        "listFiles": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "tonpm",
        "dist",
        "_mock",
        "e2e",
        "./*.*",
        "./src/*.*",
        "./src/assets/**",
        "./src/environments/**",
        "./src/styles/**",
        "./src/testing/**",
        "./src/app/*.*",
        "./src/app/core/**",
        "./src/app/shared/**",
        "./src/app/delon/**",
        "./src/app/routes/**",
        "./src/app/layout/**",
        "./src/app/custom-layout/**"
    ]
}